@inject IStringLocalizer<CultureResource> Loc

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href=""><i class="fa-solid fa-cat mx-2"></i>Cat Weather</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item">
            <NavLink class="nav-link px-3" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> @Loc["Home"]
            </NavLink>
        </div>
        <div class="nav-item">
            <NavLink class="nav-link px-3" href="forecast" Match="NavLinkMatch.All">
                <span class="oi oi-cloud" aria-hidden="true"></span> @Loc["Forecast"]
            </NavLink>
        </div>
        <div class="nav-item">
            <NavLink class="nav-link px-3" href="settings">
                <span class="oi oi-cog" aria-hidden="true"></span> @Loc["Settings"]
            </NavLink>
        </div>
        <div class="nav-item">
            <NavLink class="nav-link px-3" href="cities">
                <span class="oi oi-globe" aria-hidden="true"></span> @Loc["City"]
            </NavLink>
        </div>
        <div class="nav-item">
            <InstallPWA />
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
